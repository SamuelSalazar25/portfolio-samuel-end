---
import Tailwind from "../components/icons/Tailwind.astro";
import NextJS from "../components/icons/NextJS.astro";
const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJS,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
};
const PROJECTS = [
    {
        title: "SVGL - A beautiful library with SVG logos",
        description:
            "Created from scratch with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands.",
        link: "https://svgl.vercel.app/",
        github: "https://svgl.vercel.app/",
        image: "/projects/svgl.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
];
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text--200 mb-2 text-blue-300">{title}</h3>
            <p class="text-lg mb-4 text-pretty font-normal text-gray-500 dark:text-gray-400">{description}</p>
            <ul class="flex gap-x-4 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-1`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/5"
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
        </article>
    ))
}
